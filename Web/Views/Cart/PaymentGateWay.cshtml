@model PaymentModeVM
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2> Payment Gateway </h2>
            <form asp-action="PaymentGateway" asp-controller="Cart" method="Post">
                <input type="hidden" asp-for="PMode" value="@ViewBag.PaymentMode" />
                <table class="table table-border">
                    <tr>
                        <td> Card No :</td>
                        <td>
                            <input asp-for="CardNo" />
                        </td>
                    </tr>
                    <tr>
                        <td> CVV :</td>
                        <td>
                            <input asp-for="CCV" />
                        </td>
                    </tr>
                    <tr>
                        <td> Expiry Date: </td>
                        <td>
                            <input asp-for="ExpiryDate" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Save" />
                        </td>
                    </tr>
                </table>
            </form>

        </div>
    </div>
</div>