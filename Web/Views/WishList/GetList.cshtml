@model IEnumerable<WishList>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Wisth List for @Context.Session.GetString("UserName")</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product Name</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var temp in Model)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="@temp.Product.MainPhotoPath" alt="" width="40" height="40">
                                        </div>
                                        <div class="media-body">
                                            <p>@temp.Product.ProductDesc</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@temp.Product.Price</h5>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a class="btn btn-warning btn-sm" asp-action="Index" asp-controller="Home" >Back to list</a>
               
            </div>



        </div>
    </div>
</div>