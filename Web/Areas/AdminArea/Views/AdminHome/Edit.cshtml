@model AdminProfileVM
<div class="Card">
    <div class="card-header">
        <h2> Edit Profile </h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <hr />
        <form asp-action="Edit" method="post" asp-controller="AdminHome">

            <div class="form-group">
                <label for="exampleInputUsername1">FullName</label>
                <input asp-for="FullName" type="text" class="form-control" readonly>
            </div> 

            <div class="form-group">
                <label for="exampleInputAddress">Address</label>
               
                <textarea asp-for="Address" class="form-control" asp-for="Address">
                    </textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input asp-for="EmailID" class="form-control" id="exampleInputEmail1" placeholder="Email" fdprocessedid="fz2g2">
            </div>
            <div class="form-group">
                <label for="exampleInputContactNo">Mobile No</label>
                <input asp-for="MobileNo" class="form-control" id="exampleInputMobileNo" placeholder="MobileNo" fdprocessedid="fz2g2">
            </div>
            <div class="form-group">
                <label for="exampleInputContactPerson">ContactPerson</label>
                <input asp-for="ContactPerson" class="form-control" id="exampleInputContactPerson" placeholder="ContactPerson" fdprocessedid="fz2g2">
            </div>

           
            <button type="submit" class="btn btn-primary mr-2" fdprocessedid="dowamm">Submit</button>
            <button class="btn btn-light" fdprocessedid="j6ci88">Cancel</button>
        </form>

    </div>
</div>
