@model State
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Edit form</h4>

        <form class="forms-sample" method="post" asp-action="Edit">
            <input type="hidden" asp-for="StateID" />
            <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1">State Name</label>
                <input class="form-control" asp-for="StateName" id="exampleInputUsername1" placeholder="StateName" fdprocessedid="glgnm">
                <span asp-validation-for="StateName"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputUsername1">Country Name</label>
                <select class="form-select" asp-for="CountryID" asp-items="ViewBag.Countries">
                    <option>Select Country</option>
                </select>
                <span asp-validation-for="CountryID"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
                <a class="btn btn-info" asp-action="Index"> Back </a>
            </div>
        </form>
    </div>
</div>