@model IEnumerable<Product>

<div class="card">
    <div class="card-header">
        <h2> Product List</h2>
    </div>
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-info"> Create New</a>
                <h4 class="card-title">Table with Product List</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Sr.No</th>
                                <th scope="col">Product Name</th>
                        
                                <th scope="col">Category Name</th>
                                <th scope="col">Unit Name</th>
                                <th scope="col">Stock Qty</th>
                                <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int srno = 1;
                            }
                            @foreach (var temp in Model)
                            {
                                <tr class="table-info">
                                    <th scope="row">@srno</th>
                                   
                                    <td>@temp.ProductName</td>
                                    <td>@temp.Category.CategoryName</td>
                                    <td>@temp.Unit.UnitName</td>
                                    <td>@temp.Qty</td>
                           

                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@temp.ProductID"> Edit </a>
                                        @* <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.ProductID"> Delete </a> *@
                                        <a class="btn btn-danger" asp-action="Details" asp-route-id="@temp.ProductID"> Details </a>
                                        <a class="btn btn-danger" asp-action="AddPhotos" asp-route-id="@temp.ProductID"> Add Photos </a>
                                    </td>
                                </tr>
                                
                                srno++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

