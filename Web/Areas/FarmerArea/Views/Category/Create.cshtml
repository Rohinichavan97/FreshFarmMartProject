@model Category
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create form</h4>

        <form class="forms-sample" method="post" asp-action="Create">
            <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1">Category Name</label>
                <input class="form-control" asp-for="CategoryName" id="exampleInputCategoryName" placeholder="CategoryName" fdprocessedid="glgnm">
                <span asp-validation-for="CategoryName"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputUsername1">Purchase Limit In Qty</label>
                <input class="form-control" asp-for="PurchaseLimitInQty" id="exampleInputPurchaseLimitInQty" placeholder="PurchaseLimitInQty" fdprocessedid="glgnm">
                <span asp-validation-for="PurchaseLimitInQty"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputUsername1">MainCategory Name</label>
                <select class="form-select" asp-for="MainCategoryID" asp-items="ViewBag.MainCategories">
                    <option>Select MainCategory</option>
                </select>
                <span asp-validation-for="MainCategoryID"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
                <a class="btn btn-info" asp-action="Index"> Back </a>
            </div>
        </form>
    </div>
</div>
