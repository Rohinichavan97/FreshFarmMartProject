@model IEnumerable<Category>
<div class="card">
    <div class="card-header">
        <h2> Category List</h2>
    </div>
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-info"> Create New</a>
                <h4 class="card-title">Table with Category List</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">MainCategory Name</th>
                                <th scope="col"> PurchaseLimitInQty </th>
                                 <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int srno = 1;
                            }
                            @foreach (var temp in Model)
                            {
                                <tr class="table-info">
                                    <th scope="row">@srno</th>
                                    <td>@temp.CategoryName</td>
                                    <td>@temp.MainCategory.MainCategoryName</td>
                                    <td>@temp.PurchaseLimitInQty</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@temp.CategoryID"> Edit </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.CategoryID"> Delete </a>
                                    </td>
                                </tr>
                                srno++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

