@model IEnumerable<ProductPhoto>
<div class="card">
    <div class="card-header">

        <h2>Product Photos</h2>
    </div>
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-info"> Create New</a>
                <h4 class="card-title">Table with Product List</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Sr.No</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int srno = 1;
                            }
                            @foreach (var temp in Model)
                            {
                                <tr class="table-info">
                                    <th scope="row">@srno</th>

                                    <td>@temp.Product.ProductName</td>
                                    <td><img src="@temp.PhotoPath" alt="Product Photo" width="100" /></td>
                                    
                          

                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@temp.ProudctPhotoID"> Edit </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.ProudctPhotoID"> Delete </a>
                                       
                                    </td>
                                </tr>
                                
                                srno++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


