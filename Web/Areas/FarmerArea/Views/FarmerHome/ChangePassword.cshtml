@model ChangePasswodVM
<div class="Card">
    <div class="card-header">
        <h2> Change Password </h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <hr />
        <form asp-action="ChangePassword" method="post">

            <div class="form-group">
                <label for="CurrentPassword">Current Password</label>
                <input asp-for="OldPassword" class="form-control" id="exampleInputPassword1" placeholder="OldPassword" fdprocessedid="saaloe">
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div class="form-group">
                <label for="newpassword">New Password</label>
                <input asp-for="NewPassword" class="form-control" id="exampleNewInputPassword1" placeholder="NewPassword" fdprocessedid="saaloe">
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-group">
                <label for="newpassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" id="exampleInputConfirmPassword1" placeholder="ConfirmPassword" fdprocessedid="saaloe">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            
            <div class="form-check form-check-flat form-check-primary">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                    Remember me
                    <i class="input-helper"></i>
                </label>
            </div>
            <button type="submit" class="btn btn-primary mr-2" fdprocessedid="dowamm">Submit</button>
            
            <button class="btn btn-light" fdprocessedid="j6ci88">Cancel</button>
        </form>

    </div>
</div>
